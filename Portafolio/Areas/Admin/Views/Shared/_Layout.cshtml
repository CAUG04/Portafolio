@{
    Layout = null;
    string controlador = ViewContext.RouteData.Values["Controller"].ToString().ToLower();
}
<!DOCTYPE html>
<html lang="es">
<head>
    <title>@ViewBag.Title  | Portfolio V 1.0.0</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />

    
    <link href="~/Content/admin-style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery.js"></script>
</head>
<body>

    @if (controlador != "login")
    {
        <nav class="navbar navbar-inverse">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        Portfolio V 1.0.0
                    </a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="menu">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="~/admin/usuario">Acerca de mí</a>
                        </li>
                        <li>
                            <a href="~/admin/experiencia?tipo=1">Trabajos</a>
                        </li>
                        <li>
                            <a href="~/admin/experiencia?tipo=2">Estudios</a>
                        </li>
                        <li>
                            <a href="~/admin/habilidades">Habilidades</a>
                        </li>
                        <li>
                            <a href="~/admin/testimonios">Testimonios</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                @*<img id="user-pic" src="~/Uploads/yo.jpg" />*@
                                <b>Hola</b>, Carlos U <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="~/">Ver Portafolio</a>
                                </li>
                                <li>
                                    <a href="~/admin/login/logout">Finalizar Sesión</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    }

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                @RenderBody()
            </div>
        </div>

        <div class="well text-center">
            2015 - Proyecto desarrollado por <a target="_blank" href="http://anexsoft.com">Anexsoft</a>.
        </div>
    </div>

   
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>

    <script src="~/Scripts/ini.js"></script>

   <script src="~/Scripts/jquery.anexgrid.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

